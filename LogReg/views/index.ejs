<!doctype html>
<html lang="en">
  <head>
    <title>Login/Register</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
  </head>
  <body>
      <div class="container text-center border-bottom border-dark">
          <h3 class="display-3">Login Register</h3>
      </div>
      <br>
      <div class="container">
            <% if(messages.regSuccess) {%>
                <div class="alert alert-success">
                    <% for (var i of messages.regSuccess) {%>
                        <p><%= i %></p>
                    <% }%>
        
                </div>
            <% }%>
        <div class="row">
            <div class="col">
                <div class="text-center border-bottom border-info">
                    <h4 class="display-4">Register</h4>
                    <% if(messages.regErrors) {%>
                        <div class="alert alert-danger">
                            <% for (var i of messages.regErrors) {%>
                                <p><%= i %></p>
                            <% }%>
                
                        </div>
                    <% }%>
                    
                </div>
                <br>
                <form action="/register" method="POST">
                    <input type=text name="fName" class="form-control m-1" placeholder="First Name">
                    <input type=text name="lName" class="form-control m-1" placeholder="Last Name">
                    <input type=text name="email" class="form-control m-1" placeholder="Email">
                    <p class="text-muted m-1 ml-2">Birthday</p>
                    <input type=date name="birthday" class="form-control m-1">
                    <input type=password name="Password" class="form-control m-1" placeholder="Password">
                    <input type=password name="confirmPassword" class="form-control m-1" placeholder="Confirm Password">
                    <button type="submit" class="btn btn-info m-2">Register</button>

                </form>
            </div>
            <div class="col">
                <div class="text-center border-bottom border-info">
                    <h4 class="display-4">Login</h4>
                </div>
                <% if(messages.logError) {%>
                    <div class="alert alert-danger">
                        <% for (var i of messages.logError) {%>
                            <p><%= i %></p>
                        <% }%>
            
                    </div>
                <% }%>
                <br>
                <form action="/login" method="POST">
                    <input type=text name="email" class="form-control m-1" placeholder="Email">
                    <input type=password name="Password" class="form-control m-1" placeholder="Password">
                    <button type="submit" class="btn btn-info m-2">Login</button>

                </form>
            </div>
        </div>
      </div>
      
 
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js" integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em" crossorigin="anonymous"></script>
  </body>
</html>